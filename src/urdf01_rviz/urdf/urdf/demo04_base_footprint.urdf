<!-- 需求：设置机器人底盘，并添加摄像头 -->
<robot name="mycar">

<!-- 添加一个尺寸极小的 link, 再去关联 link 与 base_link, 关节高度刚好与 base_link 下沉的高度一致 -->
    <link name="base_footprint">
        <!-- 可视化标签 -->
        <visual>
            <!-- 1. 形状 -->
                <geometry>
                    <!-- 1.1 立方体 -->
                    <box size="0.001 0.001 0.001" />
                </geometry>
            <!-- 2. 偏移量与倾斜弧度 -->
            <origin xyz="0 0 0" rpy="0 0 0" />

            <!-- 3. 颜色-->
            <material name="base_footprint_color">
                <color rgba="0.8 0.5 0 0.5" />
            </material>
        </visual>
    </link>



    <!-- 1.底盘 link -->
    <link name="base_link">
        <!-- 可视化标签 -->
        <visual>
            <!-- 1. 形状 -->
                <geometry>
                    <!-- 1.1 立方体 -->
                    <box size="0.3 0.2 0.1" />
                </geometry>
            <!-- 2. 偏移量与倾斜弧度 -->
            <origin xyz="0 0 0" rpy="0 0 0" />

            <!-- 3. 颜色-->
            <material name="car_color">
                <color rgba="0.8 0.5 0 0.5" />
            </material>
        </visual>
    </link>

    <!-- 2.摄像头 link -->
    <link name="camera">
        <!-- 可视化标签 -->
        <visual>
            <!-- 1. 形状 -->
                <geometry>
                    <!-- 1.1 立方体 -->
                    <box size="0.02 0.05 0.05" />
                </geometry>
            <!-- 2. 偏移量与倾斜弧度 -->
            <!-- 先使用默认(后期需要修改) -->
            <origin xyz="0 0 0.0251" rpy="0 0 0" />

            <!-- 3. 颜色-->
            <material name="camera_color">
                <color rgba="0 0 1 0.5" />
            </material>
        </visual>
    </link>
    
    <!-- 关联 base_link 与 base_footprint -->
    <joint name="link2footprint" type="fixed">
        <!-- 父级 link -->
        <parent link="base_footprint" />
        <!-- 子级 link -->
        <child link="base_link" />
        <!-- 设置偏移量 -->
        <origin xyz="0 0 0.05" rpy="0 0 0" />
    </joint>



    <!-- 3.关节 -->
    <joint name="camera2base" type="continuous">
        <!-- 父级 link -->
        <parent link="base_link" />
        <!-- 子级 link -->
        <child link="camera" />
        <!-- 设置偏移量 -->
        <origin xyz="0.12 0 0.05" rpy="0 0 0" />
        <!-- 设置关节旋转参考的坐标轴 -->
        <axis xyz="0 0 1" />
    </joint>

</robot>